@model ClashOfTheCharacters.Models.UserCreature

@{
    ViewBag.Title = "View";
}

<h3>Are you sure you want to sell @Model.Creature.Name</h3>
<div>
    <hr />

    @using (Html.BeginForm("Sell", "Creature", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("userCreatureId", Model.Id)

        <input type="submit" value="@string.Format("Sell ({0} Gold)", Model.Worth)" class="btn btn-danger" />

    }
</div>

<div class="margin-top-20">
    @Html.ActionLink("No, I changed my mind", "Index", null, new { @class = "btn btn-custom", @style = "color:black" })
</div>