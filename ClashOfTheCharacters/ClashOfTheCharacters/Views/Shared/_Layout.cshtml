<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Earth of Creatures</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.fancybox.js"></script>
    <script src="~/Scripts/fancybox-custom.js"></script>
    <script src="~/Scripts/hover-script.js"></script>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Creatures", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Ladder", "Index", "Ladder")</li>
                    <li>@Html.ActionLink("Help", "Index", "Help")</li>                  

                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Battle", "Index", "Battle")</li>
                        <li>@Html.ActionLink("Team", "Index", "Character")</li>
                        <li><a href="#">Shop</a></li>
                    }

                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container">

        @if (Request.IsAuthenticated)
        {
            <div class="row">
                <div class="col-md-8 body-content">
                    @RenderBody()
                </div>
                <div class="col-md-4">
                    @Html.Action("ProfilePartial", "User")
                </div>
            </div>
        }

        else
        {
            @RenderBody()
        }

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Earth of Creatures</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
